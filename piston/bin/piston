#!/usr/bin/env ruby
require "rubygems"
require "pathname"

path = Pathname.new(File.dirname(__FILE__)).realpath.parent
$:.unshift path + "lib"
require "piston/version"

if ENV["NO_GEM"] then
  $:.unshift((path + "../piston-core/lib").realpath)
else
  gem "piston-core", "= #{Piston::VERSION::STRING}" unless ENV["NO_GEM"]
end

require "piston/core/cli"
